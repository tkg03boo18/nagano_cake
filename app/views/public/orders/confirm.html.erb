<h2>注文情報確認</h2>
<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= addTax(cart_item.item.price) %></td>
            <td><%= cart_item.amount %></td>
            <td></td>
        </tr>
        <% end %>
    </tbody>
</table>
<label>
    支払方法<%= @order.payment_method %>
</label>
<label>
    お届け先
    <%= @order.postal_code %>
    <%= @order.address %>
    <%= @order.name %>
</label>

<%= link_to "注文を確定する", orders_thanks_path %>


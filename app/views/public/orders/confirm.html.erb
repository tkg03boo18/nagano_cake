<h2>注文情報確認</h2>
<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= addTax(cart_item.item.price) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= addTax(cart_item.item.price)*cart_item.amount %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<label>
    支払方法<%= @order.payment_method %>
</label>
<label>
    お届け先
    <%= @order.postal_code %>
    <%= @order.address %>
    <%= @order.name %>
</label>
<label>
    送料 : <%= @order.delivery_charge %>
</label>
<label>
    商品合計 : <%= addTax(@total_price) %>
</label>
<label>
    請求金額 : <%= sumprice(@total_price,@order.delivery_charge) %>
</label>
<%= form_with model: @order, url: orders_path, local:true do |f| %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :payment_method %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :address %>
<%= f.hidden_field :name %>
<%= f.hidden_field :total_payment, :value => sumprice(@total_price,@order.delivery_charge) %>
<%= f.submit "注文を確定する" %>
<% end %>


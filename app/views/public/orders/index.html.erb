<div class="container">
	<div class="row">
		<div class="col-sm-3 offset-sm-1 my-4">
			<h4 class="text-center bg-light">注文履歴一覧</h4>
		</div>
    <table class="table table-bordered col-sm-12 mx-auto">
      <thead class="thead-light">
        <tr>
          <th class="col-sm-1">注文日</th>
          <th class="col-sm-4">配送先</th>
          <th class="col-sm-1">注文商品</th>
          <th class="col-sm-1">支払金額</th>
          <th class="col-sm-1">ステータス</th>
          <th class="col-sm-1">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br/>
            <%= order.address %><br/>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |detail| %>
            <%= detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<h2>会員情報編集</h2>
<%= form_with model:@customer, url: customers_path, local:true do |f| %>

<div class="field">
  <label>姓</label>
  <%= f.text_field :last_name %>
  <label>名</label>
  <%= f.text_field :first_name %>
</div>

<div class="field">
  <label>セイ</label>
  <%= f.text_field :last_name_kana %>
  <label>メイ</label>
  <%= f.text_field :first_name_kana %>
</div>

<div class="field">
  <label>郵便番号</label>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <label>住所</label>
  <%= f.text_field :address %>
</div>

<div class="field">
  <label>電話番号</label>
  <%= f.text_field :telephone_number %>
</div>

<div class="field">
  <label>メールアドレス</label>
  <%= f.email_field :email %>
</div>
<%= f.submit "変更を保存" %>

<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-3 offset-sm-1 my-4">
      <h4 class="text-center bg-light">会員情報編集</h4>
    </div>
  </div>
  <div class="row">
	  <div class="col-sm-10 mt-2">
	    <%= form_with model:@customer, url: customers_path, local:true do |f| %>
	    <div class="form-group row">
	    	<label for="inputName" class="col-sm-2 small col-form-label">名前</label>
	      <div class="col-sm-3">
	      	<%= f.text_field :last_name, class: "form-control" %>
	      </div>
	      <div class="col-sm-3">
	      	 <%= f.text_field :first_name, class: "form-control" %>
	      </div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputNameKana" class="col-sm-2 col-form-label small">フリガナ</label>
	      <div class="col-sm-3">
	      	<%= f.text_field :last_name_kana, class: "form-control" %>
	      </div>
	      <div class="col-sm-3">
	      	<%= f.text_field :first_name_kana, class: "form-control" %>
	      </div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputPostalCode" class="col-sm-2 col-form-label small">郵便番号</label>
	    	<div class="col-sm-3">
	    		<%= f.text_field :postal_code, class: "form-control" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputAddress" class="col-sm-2 col-form-label small">住所</label>
	    	<div class="col-sm-9">
	    		<%= f.text_field :address, class: "form-control w-75" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputTelephoneNumber" class="col-sm-2 col-form-label small">電話番号</label>
	    	<div class="col-sm-3">
	    		<%= f.text_field :telephone_number, class: "form-control" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	    	<label for="inputEmail" class="col-sm-2 col-form-label small">メールアドレス</label>
	    	<div class="col-sm-3">
	    		<%= f.email_field :email, class: "form-control" %>
	    	</div>
	    </div>
	    <div class="form-group row">
	    	<div class="col-sm-2 offset-sm-2 mt-2">
         <%= f.submit '編集内容を保存', class: "btn btn-success" %>
        </div>
        <div class="col-sm-2 offset-sm-2 mt-2">
     	   <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
	    </div>
     <% end %>
     </div>
	</div>
</div>

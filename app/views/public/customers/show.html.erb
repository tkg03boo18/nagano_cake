<h2>マイページ</h2>

<%= link_to "編集する", customers_edit_path(@customer) %>

<table>
  <tr>
    <th>氏名</th>
    <th><%= @customer.last_name %> <%= @customer.first_name %></th>
  </tr>
  <tr>
    <th>カナ</th>
    <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
</table>

<p>配送先: <%= link_to "一覧を見る", addresses_path %></p>
<p>注文履歴: <%= link_to "一覧を見る", orders_path %></p>
<h2>ショッピングカート</h2>
<table>
  <thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	  <% @cart_items.each do |cart_item| %>
	  <tr>
	    <td><%= cart_item.item.name %></td>
	    <td><%= addTax(cart_item.item.price) %></td>
	    <td>
	      <%= number_field_tag "amount[#{cart_item.id}]", cart_item.amount, in: 1..10 %>
	    </td>
	    <td><%= addTax(cart_item.item.price)*cart_item.amount %></td>
	    <td></td>
	  </tr>
	  <% end %>
	</tbody>
</table>
<div>
	<label>
		合計金額 : 
	</label>
</div>
<%= link_to "買い物を続ける", items_path %>

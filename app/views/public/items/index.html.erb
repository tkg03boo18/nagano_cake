<h1>商品一覧</h1>
<table>
  <thead>
		<tr>
			<th>商品画像</th>
			<th>商品名</th>
			<th>税抜価格</th>
		</tr>
	</thead>
	<tbody>
	  <% @items.each do |item| %>
	  <tr>
	  	<td>
	  		<%= link_to item_path(item) do %>
	  		<%= attachment_image_tag item, :image, :fill, 40, 40 %>
	  		<% end %>
	  	</td>
	    <td><%= item.name %></td>
	    <td><%= item.price %></td>
	  </tr>
	  <% end %>
	</tbody>
</table>
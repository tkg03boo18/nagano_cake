<div class="container">
  <div class="row">
  	<div class="col-sm-9 offset-sm-2">
  		<div class="row">
  			<div class="col-sm-4 mt-4 mb-2">
         <div class="h4 font-weight">商品一覧 <span class="small">(全<%= @allitems.count %>件)</span></div>
        </div>
  		</div>
  		<div class="row">
  			<% @items.each do |item| %>
				<table class="table-borderless col-sm-2 mx-3 mt-2 mb-3">
					<tr>
						<th></th>
						<td>
							<%= link_to item_path(item) do %>
		  		    <%= attachment_image_tag item, :image, class: "img-fluid" %>
		  				<% end %>
						</td>
					</tr>
					<tr>
						<th></th>
						<td><%= item.name %></td>
					</tr>
					<tr>
						<th></th>
						<td>¥<%= item.price %></td>
					</tr>
				</table>
				<% end %>
  		</div>
			<div class="col-sm-4 offset-sm-4 mt-4">
				<%= paginate @items %>
			</div>
  	</div>
  </div>
</div>

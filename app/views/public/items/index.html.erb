<div class="container">
  <div class="row">
  	<div class="col-sm-10 offset-sm-1">
  		<div class="row">
  			<div class="col-sm-3 my-4">
         <h4 class="text-center bg-light">商品一覧</h4>
        </div>
  		</div>
  		<div class="row">
  			<% @items.each do |item| %>
				<table class="table-borderless col-sm-2 mx-4 mt-2">
					<tr>
						<th></th>
						<td>
							<%= link_to item_path(item) do %>
		  		    <%= attachment_image_tag item, :image, class: "img-fluid" %>
		  				<% end %>
						</td>
					</tr>
					<tr>
						<th></th>
						<td><%= item.name %></td>
					</tr>
					<tr>
						<th></th>
						<td><%= item.price %></td>
					</tr>
				</table>
				<% end %>
  		</div>
  	</div>
  </div>
</div>

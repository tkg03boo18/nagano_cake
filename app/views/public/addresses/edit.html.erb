<div class="container">
  <div class="row">
    <div class="col-sm-2 offset-sm-1 my-4">
      <h4 class="text-center bg-light">配送先編集</h4>
    </div>
  </div>
  <div class="row">
	  <div class="col-sm-10 mt-2">
    <%= form_with model: @address, url: address_path, local:true do |f| %>
      <div class="form-group row">
        <label for="inputPostalCode" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-sm-3">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputAddress" class="col-sm-3 col-form-label">住所</label>
        <div class="col-sm-6">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-3 col-form-label">宛名</label>
        <div class="col-sm-3">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-sm-2 offset-sm-3">
          <%= f.submit "変更内容を保持", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

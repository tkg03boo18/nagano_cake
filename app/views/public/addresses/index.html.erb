<h2>配送先登録/一覧</h2>

<%= form_with model: @address, local: true do |f| %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>

<div>
  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :postal_code %>
</div>
<div>
  <label>住所</label>
  <%= f.text_field :address %>
</div>
<div>
  <label>宛名</label>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.submit "新規登録" %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.customer) %></td>
      <td><%= link_to "削除する", address_path(address.customer), method: :delete, "data-confirm"=>"本当に消しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
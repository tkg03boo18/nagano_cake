<div class="container">
	<div class="row">
		<div class="col-sm-3 offset-sm-1 my-4">
			<h4 class="text-center bg-light">ジャンル一覧・追加</h4>
		</div>
	</div>
	<div class="row">
	  <%= form_with model: [:admin, @genre], local:true do |f| %>
    <div class="form-inline">
      <label for="inputgenre" class="my-4 mr-5 ml-4 col-form-label">ジャンル名</label>
      <%= f.text_field :name, class: "form-controll my-4 mr-5", placeholder: "ジャンル名" %>
      <%= f.submit '新規登録', class: "btn btn-success my-4" %>
    </div>
    <% end %>
	</div>
	<div class="row">
	  <table class="table col-sm-4 ml-1 mt-4">
      <thead class="thead-light">
        <tr>
          <th class="text-center col-sm-2">ジャンル</th>
          <th class="col-sm-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td class="col-sm-2"><%= genre.name %></td>
          <td class="text-center col-sm-2">
            <%= link_to edit_admin_genre_path(genre.id) do %>
            <button type="button" class="btn btn-success btn-sm">編集する</button>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
	</div>


</div>


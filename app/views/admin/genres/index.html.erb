<div class="container">
	<div class="row">
		<div class="col-sm-3 offset-sm-1 my-4">
			<h4 class="text-center bg-light">ジャンル一覧・追加</h4>
		</div>
    <%= form_with model: [:admin, @genre], local:true do |f| %>
    <div class="form-inline">
      <label class="mb-2 mr-sm-2">ジャンル名</label>
      <%= f.text_field :name, class: "form-controll", placeholder: "ジャンル名" %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <tr>
      <td><%= link_to "Edit", edit_admin_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

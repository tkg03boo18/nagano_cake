<div class="container">
	<div class="row">
		<div class="col-sm-3 offset-sm-1 my-4">
			<h4 class="text-center bg-light">商品新規登録</h4>
		</div>
	</div>
	<div class="row">
	  <div class="col-sm-8 mx-auto">
	    <%= form_with model: [:admin, @item], local:true do |f| %>
	    <div class="form-group row">
	      <label for="inputimage" class="col-sm-3 offset-sm-1 col-form-label">商品画像</label>
	      <div class="col-sm-6">
	        <%= f.attachment_field :image, class: "form-controll" %>
	      </div>
	    </div>
      <div class="form-group row">
        <label for="inputname" class="col-sm-3 offset-sm-1 col-form-label">商品名</label>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-controll" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputintroduction" class="col-sm-3 offset-sm-1 col-form-label">商品説明</label>
        <div class="col-sm-6">
          <%= f.text_area :introduction, class: "form-controll" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputgenre" class="col-sm-3 offset-sm-1 col-form-label">ジャンル</label>
        <div class="col-sm-6">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください--", class: "form-controll" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputprice" class="col-sm-3 offset-sm-1 col-form-label">税抜価格</label>
        <div class="col-sm-6">
          <%= f.text_field :price, class: "form-controll" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputstatus" class="col-sm-3 offset-sm-1 col-form-label">販売ステータス</label>
        <div class="col-sm-6">
          <%= f.radio_button :is_active, :true, class: "form-controll" %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false, class: "form-controll" %>
          <%= f.label :is_active, "販売停止中" %>
        </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-6 offset-sm-4">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
	  </div>
	</div>
</div>

<h2>top</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td>
        <% @total_amount = 0 %>
        <% order.order_details.each do |detail| %>
        <% @total_amount += detail.amount %>
        <% end %>
        <%= @total_amount %>
      </td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
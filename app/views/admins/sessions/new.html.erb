<div class="container">
  <div class="row">
    <div class="col-sm-3 offset-sm-1 my-4">
      <h4 class="text-center bg-light">管理者ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-7 offset-sm-3 mt-4">
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="form-group row">
          <label for="inputEmail" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email w-75", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="inputPassword" class="col-sm-3 col-form-label">パスワード</label>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control password w-75" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10 offset-sm-3">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
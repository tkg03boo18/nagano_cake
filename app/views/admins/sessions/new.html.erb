<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-10">
      <h3 class="col-sm-4 my-4 text-center bg-light ">管理者ログイン</h3>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="form-group row">
          <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-controll email w-75", placeholder: "sample@example.com" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">パスワード</label>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-controll password w-75" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10 offset-sm-2">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
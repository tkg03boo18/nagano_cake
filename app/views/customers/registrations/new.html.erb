<div class="container">
  <div class="row">
    <div class="col-sm-3 offset-sm-1 my-4">
      <h4 class="text-center bg-light">新規会員登録</h4>
    </div>
  </div>
  <div class="row">
	  <table class="table-borderless col-sm-10 offset-sm-1 mt-4">
	    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
       <%= render "customers/shared/error_messages", resource: resource %>
	    <tr>
	      <th class="col-sm-2 small">名前</th>
	      <td class="col-sm-6">
	        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
	        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
	      </td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">フリガナ</th>
	      <td class="col-sm-6">
	        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
	        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
	      </td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">郵便番号(ハイフンなし)</th>
	      <td class="col-sm-6"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">住所</th>
	      <td class="col-sm-6"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">電話番号</th>
	      <td class="col-sm-6"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">メールアドレス</th>
	      <td class="col-sm-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">パスワード(6文字以上)</th>
	      <td class="col-sm-6"><%= f.password_field :password, autocomplete: "new-password" %></td>
	    </tr>
	    <tr>
	      <th class="col-sm-2 small">パスワード(確認用)</th>
	      <td class="col-sm-6"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
	    </tr>
	   </table>
	   <div class="col-sm-2 offset-sm-3 mt-4">
      <%= f.submit '新規登録', class: "btn btn-success btn-lg" %>
     </div>
     <% end %>
  </div>
</div>
